@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    /* Add your CSS styles here */
    h1 {
        text-align: center;
        color: purple; /* Purple text color */
        margin-bottom: 20px;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;/* Set the height of the container to full viewport height */
    }

    .login-form {
        background-color: #f8f9fa; /* Light gray background color */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
        max-width: 400px; /* Adjust the maximum width as needed */
        width: 100%; /* Ensure the form takes full width of the container */
    }

    .form-floating label {
        color: orange; /* Orange label text color */
    }

    .form-control {
        background-color: white; /* White input background color */
        color: #343a40; /* Dark gray input text color */
        border: 1px solid orange; /* Orange input border */
    }

        .form-control:focus {
            background-color: white; /* White input background color on focus */
            color: #343a40; /* Dark gray input text color on focus */
            border: 1px solid orange; /* Orange input border on focus */
        }

    .btn-primary {
        background-color: orange; /* Orange button background color */
        color: purple; /* Purple button text color */
        border-color: orange; /* Orange button border color */
    }

        .btn-primary:hover {
            background-color: #ffa500; /* Darker orange on hover */
            border-color: #ffa500; /* Darker orange border on hover */
            color: purple; /* Purple button text color on hover */
        }
</style>

<div class="container">
    <div class="login-container">
        <div class="login-form">
            <h1>@ViewData["Title"]</h1>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe"> @Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div class="mt-3">
                    <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                    <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                    <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

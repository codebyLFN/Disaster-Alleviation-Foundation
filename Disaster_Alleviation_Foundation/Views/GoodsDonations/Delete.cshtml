@model Disaster_Alleviation_Foundation.Models.GoodsDonation

@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-4">Delete Goods Donation</h1>

<div class="container mt-4">
    <h3>Are you sure you want to delete this?</h3>
    <div class="mb-4">
        <h4>Goods Donation</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DonorName)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.DonorName)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Category)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Category)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ItemCount)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.ItemCount)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsAnonymous)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.IsAnonymous)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DonationDate)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.DonationDate)</dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="GoodsId" />
        <div class="mb-3">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i>
                Delete
            </button>
            <a class="btn btn-secondary" asp-action="Index">
                <i class="bi bi-arrow-left"></i>
                Back to List
            </a>
        </div>
    </form>
</div>


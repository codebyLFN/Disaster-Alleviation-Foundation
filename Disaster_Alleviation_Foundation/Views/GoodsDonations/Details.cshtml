    dt.col-sm-2 {
        color: purple; /* Purple label color */
    }

    /* Style the action buttons */
    .btn-sm {
        margin-right: 5px;
    }

    /* Customize the delete button style */
    .btn-danger {
        background-color: orange; /* Orange background */
        color: purple; /* Purple text color */
        border-color: orange; /* Orange border */

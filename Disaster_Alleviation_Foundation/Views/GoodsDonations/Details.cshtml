@model Disaster_Alleviation_Foundation.Models.GoodsDonation

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-4">Details</h1>

<div class="container mt-4">
    <h4 class="mb-4">Goods Donation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Donor Name:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DonorName)</dd>
        <dt class="col-sm-2">Category:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Category)</dd>
        <dt class="col-sm-2">Description:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
        <dt class="col-sm-2">Item Count:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ItemCount)</dd>
        <dt class="col-sm-2">Is Anonymous:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.IsAnonymous)</dd>
        <dt class="col-sm-2">Donation Date:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DonationDate)</dd>
    </dl>
</div>
<div class="container mt-4">
    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@Model?.GoodsId">
        <i class="bi bi-trash"></i>
        Delete
    </a>
    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@Model?.GoodsId">
        <i class="bi bi-pencil"></i>
        Edit
    </a>
</div>
<div class="container mt-4">
    <a class="btn btn-secondary btn-sm" asp-action="Index">
        <i class="bi bi-arrow-left"></i>
        Back to List
    </a>
</div>


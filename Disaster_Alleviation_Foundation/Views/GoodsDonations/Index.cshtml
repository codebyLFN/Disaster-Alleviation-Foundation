@model IEnumerable<Disaster_Alleviation_Foundation.Models.GoodsDonation>

@{
    ViewData["Title"] = "Index";
}

<h1>Goods Donations</h1>

<div class="mb-3">
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle"></i>
        Add Donation
    </a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead class="thead-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.DonorName)</th>
                <th>@Html.DisplayNameFor(model => model.Category)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.ItemCount)</th>
                <th>@Html.DisplayNameFor(model => model.IsAnonymous)</th>
                <th>@Html.DisplayNameFor(model => model.DonationDate)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @if (item.IsAnonymous)
                    {
                        <td>Anonymous</td>
                    }
                    else
                    {
                        <td>@Html.DisplayFor(modelItem => item.DonorName)</td>
                    }
                    <td>@Html.DisplayFor(modelItem => item.Category)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.ItemCount)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsAnonymous)</td>
                    <td>@Html.DisplayFor(modelItem => item.DonationDate)</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.GoodsId">
                                <i class="bi bi-info-circle"></i>
                                Details
                            </a>
                            <!-- Add more action buttons here if needed -->
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    h1 {
        text-align: center;
        margin-bottom: 20px;
        color: purple;
    }

    /* Style the "Add Donation" button */
    .btn-primary {
        background-color: #ffb833; /* Orange background color */
        color: purple; /* Purple text color */
    }

        .btn-primary:hover {
            background-color: #ffa500; /* Darker orange on hover */
            color: purple; /* Purple text color on hover */
        }

    /* Style the table headers */
    .thead-light th {
        background-color: #ffb833; /* Orange background color */
        color: purple; /* Purple text color */
    }

    /* Style the table rows */
    tr:nth-child(even) {
        background-color: #f2f2f2; /* Light gray background for even rows */
    }

    /* Style the action buttons */
    .btn-info {
        background-color: #ffb833; /* Orange background color */
        color: purple; /* Purple text color */
    }

        .btn-info:hover {
            background-color: #ffa500; /* Darker orange on hover */
            color: purple; /* Purple text color on hover */
        }

    /* Customize the "Details" button in the action column */
    .btn-group .btn-info {
        background-color: #ffb833; /* Orange background color */
        color: purple; /* Purple text color */
    }

        .btn-group .btn-info:hover {
            background-color: #ffa500; /* Darker orange on hover */
            color: purple; /* Purple text color on hover */
        }
</style>

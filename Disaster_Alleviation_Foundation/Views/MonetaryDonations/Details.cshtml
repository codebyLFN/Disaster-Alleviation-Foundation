@model Disaster_Alleviation_Foundation.Models.MonetaryDonation

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-4">Monetary Donation Details</h1>

<div class="row">
    <div class="col-md-6">
        <h4>Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DonorName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DonorName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Amount)
            </dt>
            <dd class="col-sm-10">

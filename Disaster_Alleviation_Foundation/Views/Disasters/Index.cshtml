@model IEnumerable<Disaster_Alleviation_Foundation.Models.Disaster>

@{
    ViewData["Title"] = "Index";
}


<h1 class="text-center">Disasters</h1>

<div class="mb-3">
    <a class="btn btn-success" asp-action="Create">
        <i class="bi bi-plus-circle"></i>
        Add Disaster
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RequiredAid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th>
                    Details
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequiredAid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.DisasterId">
                            <i class="bi bi-info-circle"></i>
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Custom styles for the table header */
    h1 {
        text-align: center;
        margin-bottom: 20px;
        color: purple; /* Purple text color */
    }

    /* Style the "Add Disaster" button */
    .btn-success {
        background-color: #ffa500; /* Orange background color */
        color: purple; /* Purple text color */
    }

        .btn-success:hover {
            background-color: #ff8c00; /* Darker orange on hover */
            color: purple; /* Purple text color on hover */
        }

    /* Style the table headers */
    .thead-dark th {
        background-color: #ffa500; /* Orange background color */
        color: purple; /* Purple text color */
    }

    /* Style the table rows */
    tr:nth-child(even) {
        background-color: #f2f2f2; /* Light gray background for even rows */
    }

    /* Style the action buttons */
    .btn-primary {
        background-color: #ffb833; /* Orange background color */
        color: purple; /* Purple text color */
    }

        .btn-primary:hover {
            background-color: #ffa500; /* Darker orange on hover */
            color: purple; /* Purple text color on hover */
        }
</style>

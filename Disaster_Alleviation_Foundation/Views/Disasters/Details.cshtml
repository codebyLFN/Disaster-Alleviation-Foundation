@model Disaster_Alleviation_Foundation.Models.Disaster

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-4">Details</h1>

<div class="container">
    <h4>Disaster</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequiredAid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequiredAid)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
</div>

<dt class="col-sm-2">
    Allocated Money
</dt>
<dd class="col-sm-10">
    @if (Model.MonetaryAllocations != null)
    {
        foreach (var allocation in Model.MonetaryAllocations)
        {
            @Html.DisplayFor(model => allocation.Amount)
            <br />
        }
    }
</dd>

<dt class="col-sm-2">
    Allocated Goods
</dt>
<dd class="col-sm-10">
    @if (Model.GoodsAllocation != null)
    {
        @foreach (var allocation in Model.GoodsAllocation)
        {
            @Html.DisplayFor(model => allocation.ItemCount)
        }
    }
</dd>

<div class="container">
    <div class="text-center">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.DisasterId">Edit</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model?.DisasterId">Delete</a>
    </div>
    <div class="text-center">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<style>
    /* Custom styles can be added here if needed */
    .display-4 {
        background-color: purple; /* Purple background color */
        color: orange; /* Orange text color */
        padding: 10px;
        border-radius: 5px;
    }

    /* Add margin to the top of containers */
    .container {
        margin-top: 20px;
    }

    /* Customize the label color for better visibility */
    dt.col-sm-2 {
        color: purple; /* Purple label color */
    }

    /* Style the action buttons */
    .btn-sm {
        margin-right: 5px;
    }

    /* Customize the delete button style */
    .btn-danger {
        background-color: orange; /* Orange background */
        color: purple; /* Purple text color */
        border-color: orange; /* Orange border */
    }

        .btn-danger:hover {
            background-color: #ff8c00; /* Darker orange on hover */
            border-color: #ff8c00; /* Darker orange border on hover */
            color: purple; /* Purple text color on hover */
        }

    /* Customize the edit button style */
    .btn-primary {
        background-color: purple; /* Purple background */
        color: orange; /* Orange text color */
        border-color: purple; /* Purple border */
    }

        .btn-primary:hover {
            background-color: #8a2be2; /* Darker purple on hover */
            border-color: #8a2be2; /* Darker purple border on hover */
            color: orange; /* Orange text color on hover */
        }

    /* Customize the "Back to List" button style */
    .btn-secondary {
        background-color: purple; /* Purple background */
        color: orange; /* Orange text color */
        border-color: purple; /* Purple border */
    }

        .btn-secondary:hover {
            background-color: #8a2be2; /* Darker purple on hover */
            border-color: #8a2be2; /* Darker purple border on hover */
            color: orange; /* Orange text color on hover */
        }
</style>

@model Disaster_Alleviation_Foundation.Models.Disaster

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-4">Edit</h1>

<div class="container">
    <h4>Disaster</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DisasterId" />
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label"></label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RequiredAid" class="control-label"></label>
                    <input asp-for="RequiredAid" class="form-control" />
                    <span asp-validation-for="RequiredAid" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container text-center">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<style>
    /* Custom styles can be added here if needed */
    .display-4 {
        background-color: purple; /* Purple background color */
        color: orange; /* Orange text color */
        padding: 10px;
        border-radius: 5px;
    }

    /* Add margin to the top of containers */
    .container {
        margin-top: 20px;
    }

    /* Customize the label color for better visibility */
    .form-group label.control-label {
        color: purple; /* Purple label color */
    }

    /* Customize the input field background color */
    .form-control {
        background-color: #f5f5f5; /* Light gray background color */
    }

    /* Style the form submit button */
    .btn-primary {
        background-color: purple; /* Purple background */
        color: orange; /* Orange text color */
    }

        .btn-primary:hover {
            background-color: #8a2be2; /* Darker purple on hover */
            color: orange; /* Orange text color on hover */
        }

    /* Customize the "Back to List" button style */
    .btn-secondary {
        background-color: purple; /* Purple background */
        color: orange; /* Orange text color */
    }

        .btn-secondary:hover {
            background-color: #8a2be2; /* Darker purple on hover */
            color: orange; /* Orange text color on hover */
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@model Disaster_Alleviation_Foundation.Models.MonetaryAllocation

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Monetary Allocation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AllocationId" />
            <div class="form-group">
                <label asp-for="DisasterId" class="control-label"></label>
                <select asp-for="DisasterId" class="form-control" asp-items="ViewBag.DisasterId"></select>
                <span asp-validation-for="DisasterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MonetaryId" class="control-label"></label>
                <select asp-for="MonetaryId" class="form-control" asp-items="ViewBag.MonetaryId"></select>
                <span asp-validation-for="MonetaryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AllocationDate" class="control-label"></label>
                <input asp-for="AllocationDate" class="form-control" />
                <span asp-validation-for="AllocationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<style>
    /* Style the page title */
    h1 {
        padding: 10px;
        border-radius: 5px;
        color: purple; /* Purple text color */
    }

    /* Style the form container */
    .col-md-4 {
        padding: 20px;
        border-radius: 5px;
        background-color: #ffb833; /* Orange background color */
    }

    /* Style form labels */
    .control-label {
        color: purple; /* Purple text color */
    }

    /* Style form input fields */
    .form-control {
        border-color: purple; /* Purple border color */
    }

    /* Style form validation error messages */
    .text-danger {
        color: red; /* Red error text color */
    }

    /* Style the form submit button */
    .btn-primary {
        background-color: #ffb833; /* Orange background color */
        color: purple; /* Purple text color */
    }

        .btn-primary:hover {
            background-color: #ff6347; /* Tomato red on hover */
            color: #fff; /* White text color on hover */
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
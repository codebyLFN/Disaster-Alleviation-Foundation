@model Disaster_Alleviation_Foundation.Models.GoodsAllocation

@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-4">Delete Goods Allocation</h1>

<div class="container mt-4">
    <h3>Are you sure you want to delete this?</h3>
    <div class="mb-4">
        <h4>GoodsAllocation</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AllocationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AllocationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ItemCount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ItemCount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Disaster)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Disaster.DisasterId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GoodsDonation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GoodsDonation.GoodsId)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="AllocationId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a class="btn btn-secondary" asp-action="Index">
                <i class="bi bi-arrow-left"></i>
                Back to List
            </a>
        </form>
    </div>
</div>



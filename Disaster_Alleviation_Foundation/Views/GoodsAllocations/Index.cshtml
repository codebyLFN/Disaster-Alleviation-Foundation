@model IEnumerable<Disaster_Alleviation_Foundation.Models.GoodsAllocation>

@{
    ViewData["Title"] = "Index";
}

<h1>Goods Allocation</h1>

<div class="mb-3">
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle"></i>
        Allocate Goods to Disaster
    </a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Disaster)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GoodsDonation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AllocationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemCount)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Disaster.DisasterId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GoodsDonation.GoodsId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AllocationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemCount)
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.AllocationId">
                                <i class="bi bi-info-circle"></i>
                                Details
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<style>
    h1 {
        text-align: center;
        margin-bottom: 20px;
        color: purple; /* Purple text color */
    }

    /* Style the "Add Donation" button */
    .btn-primary {
        background-color: #ffb833; /* Orange background color */
        color: purple; /* Purple text color */
    }

        .btn-primary:hover {
            background-color: #ffa500; /* Darker orange on hover */
            color: purple; /* Purple text color on hover */
        }

    /* Style the table headers */
    .thead-light th {
        background-color: #ffb833; /* Orange background color */
        color: purple; /* Purple text color */
    }

    /* Style the table rows */
    tr:nth-child(even) {
        background-color: #f2f2f2; /* Light gray background for even rows */
    }

    /* Style the action buttons */
    .btn-info {
        background-color: #ffb833; /* Orange background color */
        color: purple; /* Purple text color */
    }

        .btn-info:hover {
            background-color: #ffa500; /* Darker orange on hover */
            color: purple; /* Purple text color on hover */
        }

    /* Customize the "Details" button in the action column */
    .btn-group .btn-info {
        background-color: #ffb833; /* Orange background color */
        color: purple; /* Purple text color */
    }

        .btn-group .btn-info:hover {
            background-color: #ffa500; /* Darker orange on hover */
            color: purple; /* Purple text color on hover */
        }
</style>

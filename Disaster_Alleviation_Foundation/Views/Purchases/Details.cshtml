@model Disaster_Alleviation_Foundation.Models.Purchase

@{
    ViewData["Title"] = "Details";
}

<h1 style="color: purple;">Details</h1>

<div>
    <h4 style="color: orange;">Purchase</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="color: purple;">
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseDate)
        </dd>
        <dt class="col-sm-2" style="color: purple;">
            @Html.DisplayNameFor(model => model.AmountSpent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AmountSpent)
        </dd>
        <dt class="col-sm-2" style="color: purple;">
            @Html.DisplayNameFor(model => model.Disaster)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Disaster.DisasterId)
        </dd>
        <dt class="col-sm-2" style="color: purple;">
            @Html.DisplayNameFor(model => model.GoodsDonation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GoodsDonation.GoodsId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.PurchaseId" class="btn btn-primary" style="background-color: orange; color: white;">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model?.PurchaseId" class="btn btn-danger" style="background-color: orange; color: white;">Delete</a>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary" style="background-color: orange; color: white;">Back to List</a>
</div>

<style>
    body {
        background-color: #f8f9fa; /* Light gray background */
    }

    h1, h4 {
        border-bottom: 2px solid purple;
        padding-bottom: 10px;
    }
</style>
